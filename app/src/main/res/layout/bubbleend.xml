<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_2sdp"
    android:background="#00000000"
    android:paddingEnd="@dimen/_16sdp"
    android:paddingStart="@dimen/_2sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/_5sdp"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="@color/oceanblue"
        app:civ_border_width="2dp" />


    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Start.MaterialCardView"
        app:cardBackgroundColor="@color/cardbgcolor"
        app:contentPaddingTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_3sdp"
        app:contentPaddingBottom="@dimen/_8sdp"
        app:contentPaddingLeft="@dimen/_4sdp"
        app:contentPaddingRight="@dimen/_4sdp"
        app:cardElevation="@dimen/_4sdp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sendertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#000" />

            <TextView
                android:id="@+id/timetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sendertext"
                android:textSize="@dimen/_7sdp"
                android:textColor="#000" />
        </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>



</LinearLayout>