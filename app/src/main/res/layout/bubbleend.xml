<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="horizontal"

    android:paddingStart="@dimen/_2sdp"
    android:paddingTop="@dimen/_2sdp"
    android:paddingEnd="@dimen/_16sdp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/_5sdp"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="@color/oceanblue"
        app:civ_border_width="2dp" />


    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        app:cardBackgroundColor="@color/cardbgcolor"
        app:cardElevation="@dimen/_4sdp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Start.MaterialCardView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sendertext"
                android:layout_width="wrap_content"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingStart="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/senderimage"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@+id/sendervideo"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:visibility="gone">

                <FrameLayout
                    android:id="@+id/main_media_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.exoplayer2.ui.PlayerView
                        android:id="@+id/playerview"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_margin="0dp"
                        android:background="@color/black"
                        android:padding="0dp"
                        app:resize_mode="fill"
                        app:show_timeout="1000"
                        app:shutter_background_color="@color/black" />

                </FrameLayout>

                <ImageView
                    android:id="@+id/fullscreene"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/_8sdp"
                    android:src="@drawable/fullscreen" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/senderfile"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center"
                android:src="@drawable/download"
                android:padding="@dimen/_16sdp"
                android:visibility="visible" />



            <TextView
                android:id="@+id/timetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:textSize="@dimen/_5sdp"

                android:textColor="#000" />
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


</LinearLayout>