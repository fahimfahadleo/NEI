<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:gravity="end"
    android:orientation="vertical"
    android:paddingStart="@dimen/_16sdp"
    android:paddingTop="@dimen/_2sdp"
    android:paddingEnd="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/timetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="21 jun 2020, 21:01"
            android:textColor="@color/forgotpasswordcolor"
            android:textSize="@dimen/_6sdp" />

        <ImageView
            android:id="@+id/boundageicon"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/search" />

        <ImageView
            android:id="@+id/timericon"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/search" />

        <TextView
            android:id="@+id/timertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="21:01"
            android:textColor="@color/forgotpasswordcolor"
            android:textSize="@dimen/_6sdp" />

        <ImageView
            android:id="@+id/sendstatus"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/search" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!--    <com.google.android.material.card.MaterialCardView-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        app:layout_constraintStart_toStartOf="parent"-->
        <!--        app:layout_constraintTop_toTopOf="parent"-->
        <!--        app:layout_constraintEnd_toStartOf="@id/profile_image"-->
        <!--        app:cardBackgroundColor="@color/red_500"-->
        <!--        android:id="@+id/cardview"-->
        <!--        android:layout_marginBottom="@dimen/_6sdp"-->
        <!--        android:layout_marginTop="@dimen/_3sdp"-->
        <!--        -->
        <!--        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.End.MaterialCardView">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/profile_image"
            android:gravity="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <EditText
                android:id="@+id/sendertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:background="@drawable/messagebackground"
                android:enabled="false"
                android:paddingStart="@dimen/_6sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingEnd="@dimen/_6sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/senderimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@+id/sendervideo"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:visibility="gone">

                <FrameLayout
                    android:id="@+id/main_media_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.exoplayer2.ui.PlayerView
                        android:id="@+id/playerview"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_margin="0dp"
                        android:background="@color/black"
                        android:padding="0dp"
                        app:resize_mode="fill"
                        app:show_timeout="1000"
                        app:shutter_background_color="@color/black" />

                </FrameLayout>

                <ImageView
                    android:id="@+id/fullscreene"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/_8sdp"
                    android:src="@drawable/fullscreen" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/senderfile"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_16sdp"
                android:src="@drawable/download"
                android:visibility="gone" />


        </LinearLayout>
        <!--    </com.google.android.material.card.MaterialCardView>-->


    </LinearLayout>

</LinearLayout>