<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="Warning"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/oceanblue" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:text="You have created a new page successfully. Would you like to visit newly created page or continue using this page?"
        android:textColor="@color/red_500"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/dismiss"
            android:layout_width="0dp"
            android:layout_height="@dimen/_32sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_16sdp"
            android:layout_weight="1"
            android:background="@drawable/buttonbackground"
            android:gravity="center"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/visit"
            android:layout_width="0dp"
            android:layout_height="@dimen/_32sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_16sdp"
            android:layout_weight="1"
            android:background="@drawable/buttonbackgroundred"
            android:gravity="center"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:text="Visit"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

    </LinearLayout>




</LinearLayout>